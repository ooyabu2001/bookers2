<main>

<p id ="notice"></p>
<div class="container px-5 px-sm-0">
<div class="row"></div>
<div class="col-md-3">
<h1> User info</h1>

<% if user_signed_in? %>

<%= image_tag current_user.get_profile_image %>
 <table class="table">
<tbody>
 <tr>
  <th>name</th>
  <th> <%=current_user.name %></th>
 </tr>

 <tr>
  <th>introduction</th>
  <th><%= current_user.introduction %></th>
</tr>
</tbody>
</table>
<div class="row">

<%=link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: @Books do |f| %>

<div class="book_group">
 <%= f.label :title %>
 <%= f.text_field :title ,class: "form-control book_title", id:"book_title" %>
</div>

<div class="book_group">
  <%= f.label :opinion %>
  <%= f.text_area :body ,class:"form-control book_body", id:"book_opinion" %>
</div>

<div class="book-group">
 <%=f.submit 'Create Book', class:"btn btn-success" %>
</div>
 <% end %>

 <% end %>
</div>
</div>
 </main>

